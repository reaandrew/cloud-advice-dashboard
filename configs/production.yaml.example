# Cloud Advice Dashboard Production Configuration Example
# Copy this file to production.yaml and modify as needed
# Only include the settings you want to override from default.yaml

# Example: Override application settings for production
app:
  environment: "production"
  base_url: "https://cloud-advice.example.com"

# Example: Enable OIDC authentication
auth:
  type: "oidc"
  oidc:
    enabled: true
    client_id: "your-client-id-here"
    client_secret: "your-client-secret-here"
    issuer_url: "https://auth.example.com"

# Example: Override database settings
database:
  mongodb:
    host: "mongodb.example.com"
    port: 27017
    database_name: "production_aws_data"

# Example: Enable production security settings
security:
  session:
    secret: "your-strong-session-secret-here"
    cookie:
      secure: true  # Enable for HTTPS

# Example: Override logging for production
monitoring:
  logging:
    level: "warn"
    destinations:
      - type: "console"
      - type: "file"
        path: "/var/log/cloud-advice-dashboard/app.log"

# Example: Enable production features
features:
  enable_cost_analysis: true
  enable_security_hub_integration: true

# Example: Disable development settings
development:
  debug: false
  hot_reload: false
  verbose_errors: false