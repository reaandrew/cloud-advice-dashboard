{% extends "policies/policy.njk" %}
{% block policy_content %}
<h1 class="govuk-heading-l">{{ policy_title }}</h1>

<p class="govuk-body">
    KMS keys in team <strong>{{ team }}</strong> with age range <strong>{{ ageBucket }}</strong>.
</p>

<form method="get" class="govuk-form">
    <div class="govuk-form-group">
        <label class="govuk-label govuk-label--s" for="search">
            Search KMS keys
        </label>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-three-quarters">
                <input class="govuk-input" id="search" name="search" type="text" value="{{ search }}" placeholder="Key name, ID, or description">
                <input type="hidden" name="team" value="{{ team }}">
                <input type="hidden" name="ageBucket" value="{{ ageBucket }}">
            </div>
            <div class="govuk-grid-column-one-quarter">
                <button class="govuk-button govuk-button--secondary govuk-!-width-full" data-module="govuk-button">
                    Search
                </button>
            </div>
        </div>
        {% if search %}
            <p class="govuk-body govuk-!-margin-top-2">
                <a href="?team={{ team | urlencode }}&ageBucket={{ ageBucket | urlencode }}" class="govuk-link">Clear search</a>
            </p>
        {% endif %}
    </div>
</form>

{% if pagination.totalResults > 0 %}
    <p class="govuk-body">
        Showing {{ pagination.startResult }} to {{ pagination.endResult }} of {{ pagination.totalResults }} results
        {% if search %}matching "{{ search }}"{% endif %}
    </p>

    <table class="govuk-table">
        <thead class="govuk-table__head">
            <tr class="govuk-table__row">
                <th class="govuk-table__header">Key Details</th>
                <th class="govuk-table__header">Age</th>
                <th class="govuk-table__header" style="width: 40px;"></th>
            </tr>
        </thead>
        <tbody class="govuk-table__body">
            {% for resource in resources %}
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                        <details class="govuk-details govuk-!-margin-bottom-0" data-module="govuk-details">
                            <summary class="govuk-details__summary">
                                <span class="govuk-details__summary-text">
                                    <code class="govuk-!-font-size-16">{{ resource.keyName or resource.keyId }}</code>
                                </span>
                            </summary>
                            <div class="govuk-details__text">
                                <strong>Key ID:</strong><br>
                                <code class="govuk-!-font-size-14">{{ resource.keyId }}</code>
                                
                                <div class="govuk-!-margin-top-3">
                                    <table class="govuk-table govuk-!-margin-top-2">
                                        <tbody class="govuk-table__body">
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell govuk-!-font-size-14"><strong>ARN</strong></td>
                                                <td class="govuk-table__cell govuk-!-font-size-14"><code>{{ resource.arn }}</code></td>
                                            </tr>
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell govuk-!-font-size-14"><strong>Creation Date</strong></td>
                                                <td class="govuk-table__cell govuk-!-font-size-14">{{ resource.creationDate }}</td>
                                            </tr>
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell govuk-!-font-size-14"><strong>Key State</strong></td>
                                                <td class="govuk-table__cell govuk-!-font-size-14">{{ resource.keyState or "Unknown" }}</td>
                                            </tr>
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell govuk-!-font-size-14"><strong>Key Usage</strong></td>
                                                <td class="govuk-table__cell govuk-!-font-size-14">{{ resource.keyUsage or "Unknown" }}</td>
                                            </tr>
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell govuk-!-font-size-14"><strong>Key Spec</strong></td>
                                                <td class="govuk-table__cell govuk-!-font-size-14">{{ resource.keySpec or "Unknown" }}</td>
                                            </tr>
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell govuk-!-font-size-14"><strong>Origin</strong></td>
                                                <td class="govuk-table__cell govuk-!-font-size-14">{{ resource.origin or "Unknown" }}</td>
                                            </tr>
                                            {% if resource.description %}
                                            <tr class="govuk-table__row">
                                                <td class="govuk-table__cell govuk-!-font-size-14"><strong>Description</strong></td>
                                                <td class="govuk-table__cell govuk-!-font-size-14">{{ resource.description }}</td>
                                            </tr>
                                            {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </details>
                    </td>
                    <td class="govuk-table__cell">{{ resource.ageDescription }}</td>
                    <td class="govuk-table__cell">
                        <button class="govuk-button govuk-button--secondary govuk-!-margin-bottom-0" onclick="copyToClipboard('{{ resource.keyId }}')" title="Copy key ID" style="padding: 8px 12px;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                                <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                            </svg>
                        </button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Pagination -->
    {% if pagination.totalPages > 1 %}
        <nav class="govuk-pagination" role="navigation" aria-label="results">
            {% if pagination.hasPrev %}
                <div class="govuk-pagination__prev">
                    <a class="govuk-link govuk-pagination__link" href="?team={{ team | urlencode }}&ageBucket={{ ageBucket | urlencode }}&search={{ search | urlencode }}&page={{ pagination.currentPage - 1 }}" rel="prev">
                        <svg class="govuk-pagination__icon govuk-pagination__icon--prev" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
                            <path d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
                        </svg>
                        <span class="govuk-pagination__link-title">Previous</span>
                    </a>
                </div>
            {% endif %}

            <ul class="govuk-pagination__list">
                {% for pageNum in range(1, pagination.totalPages + 1) %}
                    {% if pageNum == pagination.currentPage %}
                        <li class="govuk-pagination__item govuk-pagination__item--current">
                            <a class="govuk-link govuk-pagination__link" href="#" aria-label="Page {{ pageNum }}" aria-current="page">{{ pageNum }}</a>
                        </li>
                    {% elif pageNum <= 3 or pageNum > pagination.totalPages - 3 or (pageNum >= pagination.currentPage - 1 and pageNum <= pagination.currentPage + 1) %}
                        <li class="govuk-pagination__item">
                            <a class="govuk-link govuk-pagination__link" href="?team={{ team | urlencode }}&ageBucket={{ ageBucket | urlencode }}&search={{ search | urlencode }}&page={{ pageNum }}" aria-label="Page {{ pageNum }}">{{ pageNum }}</a>
                        </li>
                    {% elif pageNum == 4 and pagination.currentPage > 5 %}
                        <li class="govuk-pagination__item govuk-pagination__item--ellipses">&ctdot;</li>
                    {% elif pageNum == pagination.totalPages - 3 and pagination.currentPage < pagination.totalPages - 4 %}
                        <li class="govuk-pagination__item govuk-pagination__item--ellipses">&ctdot;</li>
                    {% endif %}
                {% endfor %}
            </ul>

            {% if pagination.hasNext %}
                <div class="govuk-pagination__next">
                    <a class="govuk-link govuk-pagination__link" href="?team={{ team | urlencode }}&ageBucket={{ ageBucket | urlencode }}&search={{ search | urlencode }}&page={{ pagination.currentPage + 1 }}" rel="next">
                        <span class="govuk-pagination__link-title">Next</span>
                        <svg class="govuk-pagination__icon govuk-pagination__icon--next" xmlns="http://www.w3.org/2000/svg" height="13" width="15" aria-hidden="true" focusable="false" viewBox="0 0 15 13">
                            <path d="m8.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
                        </svg>
                    </a>
                </div>
            {% endif %}
        </nav>
    {% endif %}

{% else %}
    <div class="govuk-panel govuk-panel--confirmation">
        <h2 class="govuk-panel__title">No KMS keys found</h2>
        <div class="govuk-panel__body">
            {% if search %}
                No KMS keys match your search "{{ search }}"
            {% else %}
                No KMS keys found for {{ team }} team in {{ ageBucket }} age range
            {% endif %}
        </div>
    </div>
{% endif %}

<p class="govuk-body govuk-!-margin-top-6">
    <a href="/compliance/kms" class="govuk-link">← Back to KMS Key Ages</a>
</p>

<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        // Could add a temporary success message here
    });
}
</script>
{% endblock %}